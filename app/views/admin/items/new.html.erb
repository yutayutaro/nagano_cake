<h1>商品新規登録</h1>
<%= form_with model: @item, url:admin_items_path do |f| %>
<div>商品画像</div><%= f.file_field :image, accept: "image/*" %></br>
<div>商品名</div><%= f.text_field :name, placeholder: "商品名" %></br>
<div>商品説明</div><%= f.text_area :introductiion, placeholder: "ここに説明文を記述します。" %></br>
<div>ジャンル</div><%= f.collection_select :genre_id, @genres, :id, :name %></br>
<div>税抜き価格</div><%= f.text_field :price, placeholder: "1000" %><div>円</div></br>
<div>販売ステータス</div><%= f.radio_button :is_active, true %><div>販売中</div>
<%= f.radio_button :is_active, false %><div>販売停止中</div></br>
<%= f.submit '新規登録',class: "btn btn-success" %>

<% end %>