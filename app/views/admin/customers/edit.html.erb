<h1><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</h1>
<%= form_with model: @customer, url:admin_customer_path, method: :patch do |customer|%>
<table>
  <thead>
    <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
    </tr>
    <tr>
        <th>氏名</th>
        <td><%= customer.text_field :last_name %></td>
        <td><%= customer.text_field :first_name %></td>
        </tr>
        <tr>
             <th>フリガナ</th>
             <td><%= customer.text_field :last_name_kana %></td>
             <td><%= customer.text_field :first_name_kana %></td>
        </tr>
          <tr>
                <th>郵便番号</th>
                <td><%= customer.text_field  :postal_code %></td>
          </tr>
        <tr>
            <th>住所</th>
            <td><%= customer.text_field :address %></td>
            </tr>
          <tr>  
          <th>電話番号</th>
          <td><%= customer.text_field :telephone_number %></td>
          </tr>
        <tr>
               <th>メールアドレス</th>
               <td><%= customer.text_field :email %></td>
        </tr>
      <tr>
      <th>会員ステータス</th>
      <td><%= customer.radio_button :is_active, true %>有効</td>
      <td><%= customer.radio_button :is_active, false %>退会</td>
      </tr>
      </table>
       <%= customer.submit '変更を保存', class:  "btn btn-success" %>
      <% end %>
