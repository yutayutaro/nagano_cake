<h1>注文履歴詳細</h1>
<h3>注文詳細</h3>
<table class="table table-bordered">
 
  <tbody>
  <tr>
    <th class= "bg-light">注文日</th>
    <td><%= @order.created_at %></td>
</tr>
<tr>
        <th class= "bg-light">配送先</th>
    <td>
 〒<%= @order.postal_code  %></br>
 <%= @order.address%></br>
 <%= @order.name%></td>
</tr>
<tr>
        <th class= "bg-light">支払い方法</th>
    <td><%= @order.payment_method_i18n %></td>
</tr>
  </tbody>
 
</table>
<h3>請求情報</h3>
<table class="table table-bordered">
 
  <tbody>
  <tr>
    <th class= "bg-light">商品合計</th>
    <td><%= @order.payment_amount - 800 %></td>
</tr>
<tr>
        <th class= "bg-light">配送料</th>
    <td><%= 800 %></td>
</tr>
<tr>
        <th class= "bg-light">ご請求額</th>
    <td><%= @order.payment_amount %></td>
</tr>
  </tbody>
<h3>注文内容</h3>
<table class="table table-bordered">
  <tbody>
  <tr>
    <th class= "bg-light">商品</th>
    <th class= "bg-light">単価（税込）</th>
    <th class= "bg-light">個数</th>
    <th class= "bg-light">小計</th>
</tr>
<% @order.order_products.each do |product| %>
<tr>
  
  <td><%= product.item.name %></td>
  <td><%= product.item.price %></td>
  <td><%= product.amount  %></td>
  <td><%= product.item.price*product.amount %></td>

</tr>
  <% end %>
  </tbody>